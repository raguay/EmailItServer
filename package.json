{
  "name": "emailitserver",
  "version": "1.0.0",
  "description": "A server for emailit.",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "dev": "node server.js",
    "build": "caxa -i . -o EmailItServer -- '{{caxa}}/node_modules/.bin/node' '{{caxa}}/server.js'"
  },
  "keywords": [
    "smpt",
    "email"
  ],
  "author": "Richard Guay",
  "license": "MIT",
  "dependencies": {
    "follow-redirects": ">=1.14.8",
    "caxa": ">=2.1.0",
    "clipboardy": "^2.3.0",
    "cors": ">=2.8.5",
    "express": ">=4.17.1",
    "fs-extra": ">=8.1.0",
    "handlebars": ">=4.7.7",
    "ip": ">=1.1.5",
    "mathjs": ">=9.4.4",
    "moment": ">=2.29.1",
    "node-red": "^2.2.0",
    "nodemailer": ">=6.6.2"
  },
  "pkg": {
    "scripts": [
      "modules/*.js",
      "node_modules/**/**/**/*.js"
    ],
    "assets": [
      "ScriptServer/**/*",
      "WorkflowScripts/**/*",
      "dialogs/*",
      "docs/**/*",
      "imgs/**/*",
      "nodered_modules/**/*"
    ],
    "targets": [
      "node16-macos-arm64"
    ],
    "outputPath": "dist"
  }
}
